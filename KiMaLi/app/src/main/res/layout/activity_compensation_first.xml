<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".compensation.compensation_firstActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        android:paddingBottom="40dp"
        android:gravity="center">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/giving"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:id="@+id/imgLoginLogo"/>

        <Button
            android:id="@+id/money_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/primary_border_fill_login"
            android:text="보상금 확인하기"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/pc_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/primary_border_fill_login"
            android:text="PC사용시간 확인하기"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>