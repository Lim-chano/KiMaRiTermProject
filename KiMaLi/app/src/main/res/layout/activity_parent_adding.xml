<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="40dp"
    android:paddingBottom="40dp"
    android:gravity="center">

    <EditText
        android:id="@+id/mission_Name_EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="제목입력" />

    <EditText
        android:id="@+id/mission_Message_EditText"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:ems="10"
        android:textSize="10dp"
        android:inputType="textPersonName"
        android:text="상세정보를 입력하세요." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="보상설정" />

        <RadioGroup
            android:id="@+id/radioradio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_alignParentRight="true">

            <RadioButton
                android:id="@+id/moneyRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="금액" />

            <RadioButton
                android:id="@+id/pcRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PC 사용시간" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:textSize="15dp"
            android:layout_below="@+id/radioradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기간설정" />

        <LinearLayout
            android:id="@+id/ii"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/startDateText"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="시작"
                android:textSize="15dp" />

            <Button
                android:id="@+id/lastDateSettingButton"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="끝"
                android:textSize="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/add_finish_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ii"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            style="?android:attr/borderlessButtonStyle" android:textColor="#FFFFFF" android:textStyle="bold"
            android:background="@drawable/primary_border_fill_login"
            android:text="확인완료" />
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>