<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingBottom="40dp">

        <TextView
            android:id="@+id/mission_Name_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제목"

            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mission_Message_textView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:ems="10"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:text="상세정보가 있는란입니다."
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textColorHint="#CECECE"

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="보상"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/radioradio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/gray_border_login"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:text="금액 : " />

                    <TextView
                        android:id="@+id/moneyText"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:text=" 보상금액" />
                </LinearLayout>

                <LinearLayout
                    android:weightSum="2"
                    android:background="@drawable/gray_border_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pcTime"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/moneyRadioButton"
                        android:text="PC 사용시간 : " />

                    <TextView
                        android:id="@+id/pcTimeText"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/moneyRadioButton"
                        android:text=" 보상 PC사용시간" />


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioradio"
                android:text="기간"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/deadline_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:text="설정된 기간이 입력되는란입니다."
                android:textSize="13dp" />

            <LinearLayout
                android:layout_below="@+id/deadline_textview"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:text="확인완료"
                    style="?android:attr/borderlessButtonStyle" android:textColor="#FFFFFF" android:textStyle="bold"
                    android:background="@drawable/primary_border_fill_login"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ok_mission_button"
                    android:layout_weight="1"/>

                <Button
                    android:text="수정하기"
                    android:textColor="@color/colorGray"
                    android:background="@drawable/gray_border_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/modify_mission_button"
                    android:layout_weight="1"/>

                <Button
                    android:text="삭제하기"
                    android:textColor="@color/colorGray"
                    android:background="@drawable/gray_border_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_mission_button"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>